<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <!-- RuntimeIdentifier sorgt dafür, dass beim Publish eine native Windows-EXE erstellt wird -->
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <!-- Erzeugt eine einzelne, eigenständige EXE -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <!-- Optional: Entfernt nicht benötigte Symbole -->
    <PublishTrimmed>true</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="netDxf" Version="3.3.4" />
  </ItemGroup>

</Project>
